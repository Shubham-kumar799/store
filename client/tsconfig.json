{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@apolloLib/*": ["apolloLib/*"],
      "@config/*": ["config/*"],
      "@theme": ["theme"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@firebase": ["firebase"],
      "@appTypes/*": ["appTypes/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@hooks": ["hooks"],
      "@graphql/*": ["graphql/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
